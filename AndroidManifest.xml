<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waivelength"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
	
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"/>    
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="WaivelengthApplication">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MainActivity"></activity>
        <activity android:name=".ui.activity.TermsActivity"></activity>
        <activity android:name=".ui.activity.SigninActivity"></activity>
        <activity android:name=".ui.activity.SignupActivity"></activity>
        <activity android:name=".ui.activity.TabBarFragmentActivity"></activity>
        <activity android:name=".ui.activity.AddVideoActivity"></activity>
        <activity android:name=".ui.activity.FeedDetailActivity"></activity>
        <activity android:name=".ui.activity.LikesActivity"></activity>
        <activity android:name=".ui.activity.CommentsActivity"></activity>
    </application>

</manifest>
